<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <data>
        <record model="ir.ui.view" id="tarea_view_form">
            <field name="name">tienda.tarea.form</field>
            <field name="model">tienda.tarea</field>
            <field name="arch" type="xml">
                <form string="Tarea Form" >  
                    <sheet>
                        <h1><field name="name" /></h1>
                        <group>
                            <group>
                                <!-- field name="hora_inicio" widget="float_time"/--> 
                                <!-- field name="hora_fin" widget="float_time"/-->
                                <field name="hora_inicio" /> 
                                <field name="hora_fin" />
                            </group>
                            <group>
                                <field name="lider" /> 
                                <field name="estado" />
                            </group>
                        </group>
                        <group>
                           <group>
                               <field name="descripcion" />
                           </group>
                           <group>
                               <field name="tipo_tarea" />
                           </group>
                           <group>
                               <field name="repite" />
                           </group>  
                           <group>
                               <field name="frecuencia" />
                           </group>         
                        </group>
                        <notebook>
                           <page string="Voluntarios">
                               <field name="voluntarios_ids" />
                           </page>    
                        </notebook>    
                    </sheet>    
                </form>    
            </field>
        </record>
         
        <record model="ir.ui.view" id="tarea_view_list">
            <field name="name">tienda.tarea.list</field>
            <field name="model">tienda.tarea</field>
            <field name="arch" type="xml">
                <tree string="Tarea List">
                    <field name="name" />
                    <field name="tipo_tarea" />
                </tree>    
            </field>
        </record> 
         
        <record model="ir.ui.view" id="tarea_view_search">
            <field name="name">tienda.tarea.search</field>
            <field name="model">tienda.tarea</field>
            <field name="arch" type="xml">
                <search>
                    <field name="descripcion" />
                    <field name="name" />
                </search>    
            </field>
        </record> 
         
        <record model="ir.ui.view" id="tarea_view_gantt">
            <field name="name">tienda.tarea.gantt</field>
            <field name="model">tienda.tarea</field>
            <field name="arch" type="xml">
                <gantt string="Ideas"
                   date_start="hora_inicio"
                   date_stop="hora_fin"
                   progress="progress"
                   default_group_by="lider" />
            </field>
        </record>   
         
    </data> 
    
</odoo>