<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <data>
        <record model="ir.ui.view" id="naveespacial_view_form">
            <field name="name">mision.nave.form</field>
            <field name="model">mision.nave</field>
            <field name="arch" type="xml">
                <form string="Nave Form" >  
                    <sheet>
                        <h1><field name="nombre" /></h1>
                        
                        <group>
                           <group>
                               <field name="ancho" />
                           </group>
                           <group>
                               <field name="longuitud" />
                           </group>
                           <group>
                               <field name="peso" />
                           </group>  
                           <group>
                               <field name="tipo_combustible" />
                           </group> 
                           <group>
                               <field name="active" />
                           </group>  
                          
                        </group>
                        <notebook>
                           <page string="Descripcion">
                               <field name="descripcion" />
                           </page>    
                        </notebook>    
                    </sheet>    
                </form>    
            </field>
        </record>
         
        <record model="ir.ui.view" id="naveespacial_view_list">
            <field name="name">mision.nave.list</field>
            <field name="model">mision.nave</field>
            <field name="arch" type="xml">
                <tree string="Nave List">
                    <field name="nombre" />
                    <field name="tipo_nave" />
                    <field name="numero_pasajeros" />
                </tree>    
            </field>
        </record> 
         
        <record model="ir.ui.view" id="naveespacial_view_search">
            <field name="name">mision.nave.search</field>
            <field name="model">mision.nave</field>
            <field name="arch" type="xml">
                <search>
                    <field name="nombre" />
                    <field name="descripcion" />
                </search>    
            </field>
        </record> 
         
    </data> 
    
</odoo>