<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    
     <data>
        <record model="ir.ui.view" id="mision_view_form">
            <field name="name">mision.form</field>
            <field name="model">mision</field>
            <field name="arch" type="xml">
                <form string="Mision Form" >  
                    <sheet>
                        <h1><field name="name" /></h1>
                        <group>
                           <group>
                               <field name="nave_espacial_id" /> 
                           </group>  
                           <group>
                               <field name="fecha_lanzamiento" /> 
                               <field name="fecha_regreso" />
                             
                           </group>  
                        </group>
                        <notebook>
                           <page string="Tripulantes">
                               <field name="tripulates_ids" />
                           </page>    
                        </notebook>    
                    </sheet>    
                </form>    
            </field>
        </record>
         
        <record model="ir.ui.view" id="mision_view_list">
            <field name="name">mision.list</field>
            <field name="model">mision</field>
            <field name="arch" type="xml">
                <tree string="Mision List">
                    <field name="name" />
                    <field name="nave_espacial_id" />
                </tree>    
            </field>
        </record> 
         
         
    </data> 
    
</odoo>