<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    
     <data>
        <record model="ir.ui.view" id="mision_view_form">
            <field name="name">mision.form</field>
            <field name="model">mision</field>
            <field name="arch" type="xml">
                <form string="Mision Form" >  
                    <sheet>
                        <h1><field name="name" /></h1>
                        <group>
                           <group>
                               <field name="nave_espacial_id" /> 
                           </group>  
                           <group>
                               <field name="fecha_lanzamiento" /> 
                               <field name="fecha_regreso" /> 
                           </group>  
                           <group>
                               <field name="cantidad_combustible" /> 
                               <field name="numero_motores" />
                           </group>   
                        </group>
                        <notebook>
                           <page string="Tripulantes">
                               <field name="tripulates_ids" />
                           </page>   
                           <page string="Proyectos">
                               <field name="proyectos_ids" />
                           </page>  
                        </notebook> 
                    </sheet>    
                </form>    
            </field>
        </record>
         
        <record model="ir.ui.view" id="mision_view_list">
            <field name="name">mision.list</field>
            <field name="model">mision</field>
            <field name="arch" type="xml">
                <tree string="Mision List">
                    <field name="name" />
                    <field name="nave_espacial_id" />
                </tree>    
            </field>
        </record> 
         
        <record model="ir.ui.view" id="mision_view_graph">
            <field name="name">mision.graph</field>
            <field name="model">mision</field>
            <field name="arch" type="xml">
                <graph string="GrÃ¡fica Misiones">
                    <field name="cantidad_combustible" type="measure"/>
                    <field name="numero_motores" type="measure"/>
                    <field name="name" />
                </graph>    
            </field>
        </record>  
         
         
    </data> 
    
</odoo>